<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/abc"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textWhat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What?" android:textSize="50dp" android:textColor="#FF0000" android:visibility="visible"/>

    <TextView
        android:id="@+id/textWhen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="When?"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FF0000" 
        android:textSize="50dp" 
        android:visibility="visible"/>

    <TextView
        android:id="@+id/textWhere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where?" android:textColor="#FF0000" android:textSize="50dp" android:visibility="visible"/>

    <Button
        android:id="@+id/buttonload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&gt;&gt;&gt;" android:textColor="#000000" android:textSize="35dp" android:onClick="click"/>

</LinearLayout>